{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "incremental": false,
    "module": "ESNEXT",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNEXT"
  },
  "exclude": [".*", "dist", "node_modules", "storybook-static", "build", "docs"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    },
    "files": true,
    "transpileOnly": true
  }
}