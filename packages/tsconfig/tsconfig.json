{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "incremental": false,
    "module": "ESNEXT",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "outDir": "dist",
    "removeComments": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNEXT"
  },
  "exclude": [".github", ".vscode", ".yarn", "dist", "node_modules", "storybook-static", "build"]
}
