{
  "compilerOptions": {
    "rootDir": "src",
    "rootDirs": [
      "package.json"
    ],
    "composite": true,
    "declarationDir": "./dist/types",
    "typeRoots": [],
    "module": "CommonJS",
    "outDir": "./dist/cjs",
    "target": "ES6"
  },
  "extends": "@xylabs/tsconfig",
  "exclude": [
    "**/build",
    "**/dist",
    "**/node_modules",
    "**/*.spec.*",
    "**/*.spec",
    "**/*.stories.*",
    "**/*.example.*",
    "**/spec/*",
    "**/stories/*"
  ],
  "include": [
    "src"
  ]
}